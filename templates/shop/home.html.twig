{% extends 'shop/index.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
{% endblock %}
{% block content %}
    <div class="background-portal">
        <div class="announce-window">
            <div class="announce-text"><strong>Discover our new collection</strong></div>
            <a href="{{ path('app_shop_search') }}"><input type="button" class="buy-now-button" value="BUY NOW"></a>
        </div>
    </div>
    <div class="browser-photo-tags">
        <div class="title-browser">Select out products</div>
        <div class="image-browser">
            <a href="/shop/search?search_product%5Bquery%5D=&search_product%5Btags%5D%5B%5D=5&search_product%5Bsearch%5D=&search_product%5B_token%5D=dedec3389490c3eeac0d7eb614.uU1ZKl7qMCmqIjo5_HyEeodzQiZyiOnsj1fRrErziLM.zTc2GBuAcnmdaUoMvSTtHeEeIGQe45iBxgaA33_E6trYBDhga4F4WvsXDg" class="image-link-browser">
                <div class="overlay-browser">
                    <div class="text-over-browser">Clothes</div>
                </div>
                <img src="{{ asset('img/clothes_browser.png') }}" alt="Descripción de la imagen" class="img-center">
            </a>

            <a href="/shop/search?search_product%5Bquery%5D=&search_product%5Btags%5D%5B%5D=6&search_product%5Bsearch%5D=&search_product%5B_token%5D=af3744d90f36867f5.sB5aGqjmI5qqITXEzVJosIsDdGJPpYvc-VPe8337ZpQ.xGQ1KO2MYcqdakXxjAoB1-1uFiAjzvqxsAKPgEjMBP3RVztQnY1r6fsUAQ" class="image-link-browser">
                <div class="overlay-browser">
                    <div class="text-over-browser">Merchandising</div>
                </div>
                <img src="{{ asset('img/merchandising.png') }}" alt="Descripción de la imagen" class="img-center">
            </a>

            <a href="/shop/search?search_product%5Bquery%5D=&search_product%5Btags%5D%5B%5D=7&search_product%5Bsearch%5D=&search_product%5B_token%5D=c6e85138f7986d4630732ce090aa8038.f3Bu9WkOpELw7vgrECyaLf9E8oebm3pIdGQB7kSqK5s.CwoBxyxk5hLHpYgeUXTzSpkpkMX38AslPTVQnXGdSfIeOQ-_XGXsMaHbzA" class="image-link-browser">
                <div class="overlay-browser">
                    <div class="text-over-browser">Tools</div>
                </div>
                <img src="{{ asset('img/tools.png') }}" alt="Descripción de la imagen" class="img-center">
            </a>
        </div>
    </div>

    <div class="popular-prod">
        <div class="title-popul-prod">Our most popular products</div>
        <div class="product-grid">
            {% for product in products %}
                <div class="product-item">
                    <img src="{{ asset('img/products/' ~ product.img) }}">
                    <div class="product-name">{{ product.name }}</div>
                    <div class="product-prize">{{ product.prize }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

